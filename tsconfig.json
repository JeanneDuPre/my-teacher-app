{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@utils/*": ["../utils/*"],
      "@screens/*": ["app/screens/*"],
      "@hooks/*": ["hooks/*"],
      "@assets/*": ["assets/*"],
      "@constants/*": ["constants/*"],
      "@styles/*": ["styles/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
